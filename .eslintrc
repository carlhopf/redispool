{
  "env": {
    "node": true,
    "browser": false,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
  },
  "rules": {
    "quotes": [2, "single"],
    "comma-dangle": [2, "always-multiline"],
    "dot-location": [2, "property"],
    "indent": [2, "tab", {"SwitchCase": 1}],
    "array-bracket-spacing": [2, "never"],
    "comma-spacing": [2, { before: false, after: true }],
    "space-before-function-paren": 2,
    "no-undef": 2
  }
}
